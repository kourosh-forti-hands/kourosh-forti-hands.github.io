---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
const hasCertifications = siteConfig.certifications && siteConfig.certifications.length > 0;
const hasCourses = siteConfig.courses && siteConfig.courses.length > 0;
const hasAwards = siteConfig.awards && siteConfig.awards.length > 0;
---

{
  (hasEducation || hasCertifications) && (
    <section id="education" style="background-color: var(--bg-secondary);">
      <div class="container">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="mb-4" style="color: var(--color-primary);">
            Background & Credentials
          </h2>
          <p class="text-lg max-w-2xl mx-auto" style="color: var(--text-secondary);">
            Academic foundation, professional certifications, continuous learning, and recognition.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Education Section -->
          {hasEducation && (
            <div>
              <h3 class="text-xl font-semibold mb-6" style="color: var(--color-primary);">Education</h3>
              <div class="space-y-6">
                {siteConfig.education.map((edu) => (
                  <div class="card">
                    <div class="flex items-start gap-4">
                      <div class="w-8 h-8 rounded-lg flex items-center justify-center flex-shrink-0" style="background: var(--color-accent); opacity: 0.1;">
                        <svg width="16" height="16" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                        </svg>
                      </div>
                      <div class="flex-1">
                        <h4 class="text-lg font-semibold mb-1" style="color: var(--color-primary);">
                          {edu.degree}
                        </h4>
                        <p class="font-semibold mb-2" style="color: var(--color-accent);">
                          {edu.school}
                        </p>
                        <div class="mb-3">
                          <span class="badge">
                            {edu.dateRange}
                          </span>
                        </div>
                        {edu.achievements && edu.achievements.length > 0 && (
                          <ul class="space-y-2">
                            {edu.achievements.map((achievement) => (
                              <li class="flex items-start gap-3">
                                <div class="w-2 h-2 rounded-full mt-2 flex-shrink-0" style="background: var(--color-accent);"></div>
                                <span style="color: var(--text-secondary);">{achievement}</span>
                              </li>
                            ))}
                          </ul>
                        )}
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Certifications Section -->
          {hasCertifications && (
            <div>
              <h3 class="text-xl font-semibold mb-6" style="color: var(--color-primary);">Certifications</h3>
              <div class="space-y-3">
                {siteConfig.certifications.map((cert) => (
                  <div class="card" style="padding: var(--spacing-sm);">
                    <div class="flex items-center gap-3">
                      <div class="w-6 h-6 rounded-lg flex items-center justify-center flex-shrink-0" style="background: var(--color-success); opacity: 0.1;">
                        <svg width="16" height="16" style="color: var(--color-success);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      </div>
                      <span class="font-medium flex-1" style="color: var(--text-primary);">
                        {cert}
                      </span>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>

        <!-- Training & Awards Row -->
        {(hasCourses || hasAwards) && (
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mt-12">
            <!-- Recent Training Section -->
            {hasCourses && (
              <div>
                <h3 class="text-xl font-semibold mb-6" style="color: var(--color-primary);">Recent Training</h3>
                <div class="space-y-3">
                  {siteConfig.courses.map((course) => (
                    <div class="card" style="padding: var(--spacing-sm);">
                      <div class="flex items-center gap-3">
                        <div class="w-6 h-6 rounded-lg flex items-center justify-center flex-shrink-0" style="background: var(--color-accent); opacity: 0.1;">
                          <svg width="16" height="16" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                          </svg>
                        </div>
                        <div class="flex-1">
                          <span class="font-medium block" style="color: var(--text-primary);">
                            {course.name}
                          </span>
                          <span class="text-sm" style="color: var(--text-secondary);">
                            {course.provider} Â· {course.date}
                          </span>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}

            <!-- Awards Section -->
            {hasAwards && (
              <div>
                <h3 class="text-xl font-semibold mb-6" style="color: var(--color-primary);">Recognition</h3>
                <div class="space-y-3">
                  {siteConfig.awards.map((award) => (
                    <div class="card" style="padding: var(--spacing-sm);">
                      <div class="flex items-start gap-3">
                        <div class="w-6 h-6 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5" style="background: var(--color-warning); opacity: 0.1;">
                          <svg width="16" height="16" style="color: var(--color-warning);" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                          </svg>
                        </div>
                        <div class="flex-1">
                          <span class="font-medium block" style="color: var(--text-primary);">
                            {award.name}
                          </span>
                          <span class="text-sm" style="color: var(--text-secondary);">
                            {award.company}
                          </span>
                          {award.description && (
                            <p class="text-sm mt-1" style="color: var(--text-secondary);">
                              {award.description}
                            </p>
                          )}
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>
        )}
      </div>
    </section>
  )
}