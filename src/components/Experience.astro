---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience" class="py-16 lg:py-20 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl mb-4">
            Work Experience
          </h2>
          <div class="w-20 h-1 bg-blue-600 mx-auto mb-4"></div>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            My professional journey in AI engineering, cloud services, and network architecture.
          </p>
        </div>

        <!-- Experience Timeline -->
        <div class="relative">
          <!-- Timeline line -->
          <div class="absolute left-8 md:left-1/2 top-0 bottom-0 w-0.5 bg-gray-300 transform md:-translate-x-0.5"></div>

          <div class="space-y-8">
            {siteConfig.experience.map((job, index) => (
              <div class={`relative flex items-start ${
                index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'
              }`}>
                <!-- Timeline dot -->
                <div class="absolute left-8 md:left-1/2 w-4 h-4 bg-blue-600 rounded-full transform -translate-x-1/2 md:translate-x-0 border-4 border-white shadow-md z-10"></div>

                <!-- Content card -->
                <div class={`bg-white rounded-lg shadow-md border p-6 ml-16 md:ml-0 ${
                  index % 2 === 0
                    ? 'md:mr-8 md:w-5/12'
                    : 'md:ml-8 md:w-5/12'
                } card-hover`}>
                  <!-- Company and Title -->
                  <div class="mb-4">
                    <h3 class="text-xl font-bold text-gray-900 mb-1">
                      {job.title}
                    </h3>
                    <div class="flex items-center gap-2 mb-2">
                      <div class="w-6 h-6 bg-blue-100 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                      </div>
                      <span class="text-lg font-semibold text-blue-600">{job.company}</span>
                    </div>
                    <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                      {job.dateRange}
                    </div>
                  </div>

                  <!-- Job responsibilities -->
                  {job.bullets && job.bullets.length > 0 && (
                    <ul class="space-y-2">
                      {job.bullets.map((bullet) => (
                        <li class="flex items-start gap-3">
                          <div class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></div>
                          <p class="text-gray-700 leading-relaxed">{bullet}</p>
                        </li>
                      ))}
                    </ul>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )
}