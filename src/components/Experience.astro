<style>
  @keyframes experienceMatrixFall {
    0% {
      transform: translateY(-100vh) rotateZ(0deg);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(100vh) rotateZ(360deg);
      opacity: 0;
    }
  }

  @keyframes scanLine {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  @keyframes experienceGlow {
    0%, 100% {
      box-shadow: 0 0 20px rgba(6, 182, 212, 0.3), 0 0 40px rgba(147, 51, 234, 0.2);
    }
    50% {
      box-shadow: 0 0 30px rgba(6, 182, 212, 0.6), 0 0 60px rgba(147, 51, 234, 0.4);
    }
  }

  @keyframes cardFloat3D {
    0%, 100% {
      transform: perspective(1000px) rotateX(-1deg) rotateY(1deg) translateY(0px);
    }
    50% {
      transform: perspective(1000px) rotateX(-1deg) rotateY(1deg) translateY(-10px);
    }
  }

  .experience-matrix {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    overflow: hidden;
  }

  .experience-matrix span {
    position: absolute;
    top: -20px;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 14px;
    color: #00ff41;
    animation: experienceMatrixFall 12s linear infinite;
    opacity: 0.7;
    text-shadow: 0 0 5px #00ff41;
  }

  .experience-matrix span:nth-child(1) { left: 10%; animation-duration: 8s; }
  .experience-matrix span:nth-child(2) { left: 30%; animation-duration: 10s; }
  .experience-matrix span:nth-child(3) { left: 50%; animation-duration: 7s; }
  .experience-matrix span:nth-child(4) { left: 70%; animation-duration: 9s; }
  .experience-matrix span:nth-child(5) { left: 85%; animation-duration: 11s; }

  .timeline-item {
    animation: fadeInLeft 0.8s ease-out forwards;
