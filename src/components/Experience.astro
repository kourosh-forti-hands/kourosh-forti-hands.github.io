---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience">
      <div class="container">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="mb-4" style="color: var(--color-primary);">
            Work Experience
          </h2>
          <p class="text-lg max-w-2xl mx-auto" style="color: var(--text-secondary);">
            My professional journey in AI engineering, cloud services, and network architecture.
          </p>
        </div>

        <!-- Experience Grid -->
        <div class="grid grid-cols-1 gap-8">
          {siteConfig.experience.map((job) => (
            <div class="card">
              <!-- Company and Title -->
              <div class="flex items-start justify-between mb-4">
                <div>
                  <h3 class="text-xl font-semibold mb-1" style="color: var(--color-primary);">
                    {job.title}
                  </h3>
                  <div class="flex items-center gap-2 mb-2">
                    <div class="w-5 h-5 rounded-lg flex items-center justify-center" style="background: var(--color-accent); opacity: 0.1;">
                      <svg width="12" height="12" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                      </svg>
                    </div>
                    <span class="text-lg font-semibold" style="color: var(--color-accent);">{job.company}</span>
                  </div>
                </div>
                <span class="badge">
                  {job.dateRange}
                </span>
              </div>

              <!-- Job responsibilities -->
              {job.bullets && job.bullets.length > 0 && (
                <ul class="space-y-3">
                  {job.bullets.map((bullet) => (
                    <li class="flex items-start gap-3">
                      <div class="w-2 h-2 rounded-full mt-2 flex-shrink-0" style="background: var(--color-accent);"></div>
                      <p style="color: var(--text-secondary); line-height: 1.6;">{bullet}</p>
                    </li>
                  ))}
                </ul>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>
  )
}