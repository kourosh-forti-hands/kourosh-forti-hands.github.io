---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;

// Function to get company type color - Enhanced Dark Theme
function getCompanyColor(company, title) {
  if (title.includes('AI Engineer') || company.includes('AI')) {
    return {
      gradient: "from-blue-500 to-purple-600",
      bg: "from-slate-900/95 to-blue-900/95",
      border: "border-blue-400/30",
      icon: "text-blue-400",
      dot: "bg-gradient-to-r from-blue-500 to-purple-600",
      glowColor: "blue-400",
      accentColor: "from-blue-400 to-cyan-400",
      category: "AI/ML"
    };
  } else if (title.includes('Cloud') || company.includes('Cloud')) {
    return {
      gradient: "from-purple-500 to-pink-600",
      bg: "from-slate-900/95 to-purple-900/95",
      border: "border-purple-400/30",
      icon: "text-purple-400",
      dot: "bg-gradient-to-r from-purple-500 to-pink-600",
      glowColor: "purple-400",
      accentColor: "from-purple-400 to-pink-400",
      category: "Cloud"
    };
  } else if (title.includes('Network') || title.includes('Engineer')) {
    return {
      gradient: "from-green-500 to-emerald-600",
      bg: "from-slate-900/95 to-green-900/95",
      border: "border-green-400/30",
      icon: "text-green-400",
      dot: "bg-gradient-to-r from-green-500 to-emerald-600",
      glowColor: "green-400",
      accentColor: "from-green-400 to-emerald-400",
      category: "Tech"
    };
  } else if (title.includes('Security') || title.includes('Intern')) {
    return {
      gradient: "from-orange-500 to-red-600",
      bg: "from-slate-900/95 to-orange-900/95",
      border: "border-orange-400/30",
      icon: "text-orange-400",
      dot: "bg-gradient-to-r from-orange-500 to-red-600",
      glowColor: "orange-400",
      accentColor: "from-orange-400 to-red-400",
      category: "Security"
    };
  } else {
    return {
      gradient: "from-slate-500 to-gray-600",
      bg: "from-slate-900/95 to-gray-900/95",
      border: "border-slate-400/30",
      icon: "text-slate-400",
      dot: "bg-gradient-to-r from-slate-500 to-gray-600",
      glowColor: "slate-400",
      accentColor: "from-slate-400 to-gray-400",
      category: "Other"
    };
  }
}
