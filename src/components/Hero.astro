---
import { siteConfig } from "../config";
---

<div
  id="hero"
  class="relative isolate overflow-hidden min-h-screen flex items-center bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900"
>
  <!-- Animated Mesh Background -->
  <div class="absolute inset-0 mesh-background opacity-20"></div>

  <!-- Floating Geometric Shapes -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-gradient-to-r from-blue-400/20 to-purple-600/20 rounded-full blur-3xl animate-pulse float stagger-1"></div>
    <div class="absolute top-3/4 right-1/4 w-96 h-96 bg-gradient-to-r from-cyan-400/20 to-blue-600/20 rounded-full blur-3xl animate-pulse float stagger-3"></div>
    <div class="absolute bottom-1/4 left-1/2 w-48 h-48 bg-gradient-to-r from-purple-400/20 to-pink-600/20 rounded-full blur-3xl animate-pulse float stagger-2"></div>
  </div>

  <!-- Neural Network Lines -->
  <svg class="absolute inset-0 w-full h-full opacity-30" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <linearGradient id="lineGradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="#4facfe" stop-opacity="1" />
        <stop offset="100%" stop-color="#00f2fe" stop-opacity="0" />
      </linearGradient>
    </defs>
    <g class="neural-lines">
      <line x1="10%" y1="20%" x2="90%" y2="80%" stroke="url(#lineGradient)" stroke-width="1">
        <animate attributeName="opacity" values="0.3;0.8;0.3" dur="3s" repeatCount="indefinite"></animate>
      </line>
      <line x1="80%" y1="10%" x2="20%" y2="90%" stroke="url(#lineGradient)" stroke-width="1">
        <animate attributeName="opacity" values="0.8;0.3;0.8" dur="4s" repeatCount="indefinite"></animate>
      </line>
      <line x1="30%" y1="70%" x2="70%" y2="30%" stroke="url(#lineGradient)" stroke-width="1">
        <animate attributeName="opacity" values="0.5;0.9;0.5" dur="2.5s" repeatCount="indefinite"></animate>
      </line>
    </g>
  </svg>

  <!-- Matrix-style Code Rain (subtle) -->
  <div class="absolute inset-0 opacity-10">
    <div class="code-rain">
      <span style={{animationDelay: "0s"}}>01001</span>
      <span style={{animationDelay: "1s"}}>11010</span>
      <span style={{animationDelay: "2s"}}>10110</span>
      <span style={{animationDelay: "0.5s"}}>01101</span>
      <span style={{animationDelay: "1.5s"}}>10011</span>
    </div>
  </div>

  <div class="w-full mx-auto max-w-7xl px-8 sm:px-12 lg:px-24 relative z-10">
    <div class="max-w-4xl">
      <!-- AI-themed greeting -->
      <div class="glass rounded-2xl p-6 mb-8 animate-fade-in-up stagger-1">
        <div class="flex items-center gap-3">
          <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
          <span class="text-green-400 font-mono text-sm">system.status = active</span>
        </div>
        <p class="text-white/80 font-mono text-lg mt-2">Initializing AI Engineer Portfolio...</p>
      </div>

      <!-- Main heading with gradient text -->
      <h2 class="text-xl sm:text-2xl md:text-3xl font-semibold text-white/70 animate-fade-in-up stagger-2 mb-4">
        Hello, I'm
      </h2>

      <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold animate-fade-in-up stagger-3 mb-6">
        <span class="gradient-text">{siteConfig.name}</span>
      </h1>

      <div class="relative mb-8 animate-fade-in-up stagger-4">
        <p class="text-2xl sm:text-3xl md:text-4xl font-medium text-white/90">
          <span class="gradient-text-tech">{siteConfig.title}</span>
        </p>
        <div class="absolute -right-4 -top-2">
          <div class="w-6 h-6 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full animate-pulse neon-glow"></div>
        </div>
      </div>

      <!-- Enhanced tagline -->
      <p class="text-lg sm:text-xl text-white/80 mb-8 max-w-2xl leading-relaxed animate-fade-in-up stagger-5">
        Architecting the future with <span class="gradient-text-neural font-semibold">Agentic AI Systems</span> and
        <span class="gradient-text-tech font-semibold">Intelligent Automation</span> for enterprise environments.
      </p>

      <!-- Modern CTA buttons -->
      <div class="flex flex-col sm:flex-row gap-4 mb-12 animate-fade-in-up stagger-6">
        <button class="btn-modern px-8 py-4 text-lg">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            View Projects
          </span>
        </button>
        <a
          href={`mailto:${siteConfig.social.email}`}
          class="glass border-2 border-white/20 rounded-xl px-8 py-4 text-lg font-semibold text-white hover:bg-white/10 transition-all duration-300 hover:scale-105 flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          Let's Connect
        </a>
      </div>

      <!-- Social Links with enhanced styling -->
      <div class="flex gap-6 animate-fade-in-up stagger-7">
        {siteConfig.social?.email && (
          <a
            href={`mailto:${siteConfig.social.email}`}
            aria-label="Email"
            class="group p-3 glass rounded-xl hover:bg-white/10 transition-all duration-300 hover:scale-110"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white/70 group-hover:text-cyan-400 transition-colors duration-300">
              <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
              <path d="M3 7l9 6l9 -6" />
            </svg>
          </a>
        )}
        {siteConfig.social?.linkedin && (
          <a
            href={siteConfig.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            class="group p-3 glass rounded-xl hover:bg-white/10 transition-all duration-300 hover:scale-110"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white/70 group-hover:text-blue-400 transition-colors duration-300">
              <path d="M8 11v5" />
              <path d="M8 8v.01" />
              <path d="M12 16v-5" />
              <path d="M16 16v-3a2 2 0 1 0 -4 0" />
              <path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z" />
            </svg>
          </a>
        )}
        {siteConfig.social?.github && (
          <a
            href={siteConfig.social.github}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
            class="group p-3 glass rounded-xl hover:bg-white/10 transition-all duration-300 hover:scale-110"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white/70 group-hover:text-purple-400 transition-colors duration-300">
              <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
            </svg>
          </a>
        )}
      </div>
    </div>
  </div>

  <!-- Enhanced scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <div class="glass rounded-full p-3">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white/60">
        <path d="M12 5v14" />
        <path d="M19 12l-7 7-7-7" />
      </svg>
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes codeRain {
    0% {
      transform: translateY(-100vh);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(100vh);
      opacity: 0;
    }
  }

  .code-rain {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    overflow: hidden;
  }

  .code-rain span {
    position: absolute;
    top: -20px;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 14px;
    color: #00ff41;
    animation: codeRain 8s linear infinite;
    opacity: 0.6;
  }

  .code-rain span:nth-child(1) { left: 10%; animation-duration: 7s; }
  .code-rain span:nth-child(2) { left: 30%; animation-duration: 9s; }
  .code-rain span:nth-child(3) { left: 50%; animation-duration: 6s; }
  .code-rain span:nth-child(4) { left: 70%; animation-duration: 8s; }
  .code-rain span:nth-child(5) { left: 90%; animation-duration: 7.5s; }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }

  .animation-delay-600 {
    animation-delay: 0.6s;
  }
</style>