---
import { siteConfig } from "../config";
---

<section id="about" class="py-16 lg:py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl mb-4">
        About Me
      </h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- About Text -->
      <div>
        <p class="text-lg text-gray-700 mb-8">
          {siteConfig.aboutMe}
        </p>

        <!-- Key Metrics -->
        <div class="grid grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600 mb-2">5+</div>
            <div class="text-sm text-gray-600">Years Experience</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-green-600 mb-2">70%</div>
            <div class="text-sm text-gray-600">Efficiency Gains</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-purple-600 mb-2">$5M+</div>
            <div class="text-sm text-gray-600">Revenue Impact</div>
          </div>
        </div>
      </div>

      <!-- Skills Section -->
      <div>
        <h3 class="text-xl font-semibold text-gray-900 mb-6">Skills & Technologies</h3>
        <div class="flex flex-wrap gap-2">
          {siteConfig.skills.map((skill) => (
            <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
              {skill}
            </span>
          ))}
        </div>
      </div>
    </div>

    <!-- Current Focus -->
    <div class="mt-16">
      <h3 class="text-2xl font-bold text-gray-900 text-center mb-8">Current Focus</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-gray-50 p-6 rounded-lg">
          <h4 class="font-semibold text-lg text-gray-900 mb-3">Agentic AI Systems</h4>
          <p class="text-gray-700">Building intelligent agents that can autonomously execute complex workflows and decision-making processes for enterprise environments.</p>
        </div>
        <div class="bg-gray-50 p-6 rounded-lg">
          <h4 class="font-semibold text-lg text-gray-900 mb-3">Enterprise Automation</h4>
          <p class="text-gray-700">Transforming compliance, security, and cloud operations through AI-powered automation solutions that reduce manual effort by 70%+.</p>
        </div>
      </div>
    </div>
  </div>
</section>