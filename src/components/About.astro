---
import { siteConfig } from "../config";
---

<section id="about">
  <div class="container">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="mb-4" style="color: var(--color-primary);">
        About Me
      </h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- About Text -->
      <div>
        <p class="text-lg mb-8" style="color: var(--text-secondary); line-height: 1.8;">
          {siteConfig.aboutMe}
        </p>

        <!-- Key Metrics -->
        <div class="grid grid-cols-3 gap-4">
          <div class="text-center p-4" style="background: var(--bg-secondary); border-radius: var(--radius-lg);">
            <div class="text-3xl font-bold mb-2" style="color: var(--color-accent);">5+</div>
            <div class="text-sm" style="color: var(--text-secondary);">Years Experience</div>
          </div>
          <div class="text-center p-4" style="background: var(--bg-secondary); border-radius: var(--radius-lg);">
            <div class="text-3xl font-bold mb-2" style="color: var(--color-success);">70%</div>
            <div class="text-sm" style="color: var(--text-secondary);">Efficiency Gains</div>
          </div>
          <div class="text-center p-4" style="background: var(--bg-secondary); border-radius: var(--radius-lg);">
            <div class="text-3xl font-bold mb-2" style="color: var(--color-warning);">$5M+</div>
            <div class="text-sm" style="color: var(--text-secondary);">Revenue Impact</div>
          </div>
        </div>
      </div>

      <!-- Skills Section -->
      <div>
        <h3 class="text-xl font-semibold mb-6" style="color: var(--color-primary);">
          Skills & Technologies
        </h3>
        <div class="flex flex-wrap gap-2">
          {siteConfig.skills.map((skill) => (
            <span class="badge">
              {skill}
            </span>
          ))}
        </div>
      </div>
    </div>

    <!-- Current Focus -->
    <div class="mt-16">
      <h3 class="text-2xl font-bold text-center mb-8" style="color: var(--color-primary);">
        Current Focus
      </h3>
      <!-- Top Row: 2 columns -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div class="p-6" style="background: var(--bg-secondary); border-radius: var(--radius-lg);">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: var(--color-accent); opacity: 0.1;">
              <svg width="24" height="24" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <h4 class="font-semibold text-lg" style="color: var(--color-primary);">
              Cloud Platform Engineering
            </h4>
          </div>
          <p style="color: var(--text-secondary);">
            Designing scalable multi-cloud infrastructure with Terraform, Kubernetes, and enterprise-grade IaC patterns.
          </p>
        </div>
        <div class="p-6" style="background: var(--bg-secondary); border-radius: var(--radius-lg);">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: var(--color-success); opacity: 0.1;">
              <svg width="24" height="24" style="color: var(--color-success);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
            </div>
            <h4 class="font-semibold text-lg" style="color: var(--color-primary);">
              Agentic AI Systems
            </h4>
          </div>
          <p style="color: var(--text-secondary);">
            Building intelligent agents that autonomously execute complex workflows and decision-making for enterprise environments.
          </p>
        </div>
      </div>
      <!-- Bottom Row: Centered single item -->
      <div class="flex justify-center">
        <div class="p-6 w-full md:w-1/2" style="background: var(--bg-secondary); border-radius: var(--radius-lg);">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: var(--color-warning); opacity: 0.1;">
              <svg width="24" height="24" style="color: var(--color-warning);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h4 class="font-semibold text-lg" style="color: var(--color-primary);">
              DevSecOps & Compliance
            </h4>
          </div>
          <p style="color: var(--text-secondary);">
            FedRAMP, STIG-hardened environments, and secure cloud architectures for government and regulated industries.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
