---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" style="background-color: var(--bg-secondary);">
      <div class="container">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="mb-4" style="color: var(--color-primary);">
            Featured Projects
          </h2>
          <p class="text-lg max-w-2xl mx-auto" style="color: var(--text-secondary);">
            AI-powered solutions and enterprise automation systems that drive real business impact
          </p>
        </div>

        <!-- Projects Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {siteConfig.projects.map((project) => (
            <div class="card">
              {project.link ? (
                <a
                  href={project.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block"
                  style="text-decoration: none; color: inherit;"
                >
                  <div class="flex items-start justify-between mb-4">
                    <h3 class="text-xl font-semibold" style="color: var(--color-primary); margin-bottom: 0;">
                      {project.name}
                    </h3>
                    <svg width="20" height="20" class="flex-shrink-0 ml-2" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </div>

                  <p class="mb-4" style="color: var(--text-secondary);">
                    {project.description}
                  </p>

                  {project.skills && project.skills.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {project.skills.map((skill) => (
                        <span class="badge">
                          {skill}
                        </span>
                      ))}
                    </div>
                  )}
                </a>
              ) : (
                <div>
                  <div class="flex items-start justify-between mb-4">
                    <h3 class="text-xl font-semibold" style="color: var(--color-primary); margin-bottom: 0;">
                      {project.name}
                    </h3>
                    <span class="badge">
                      Private
                    </span>
                  </div>

                  <p class="mb-4" style="color: var(--text-secondary);">
                    {project.description}
                  </p>

                  {project.skills && project.skills.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {project.skills.map((skill) => (
                        <span class="badge">
                          {skill}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>
  )
}
