---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;

// Function to get project category color - Dark Theme Enhanced
function getProjectColor(skills) {
  if (skills.some(skill => skill.includes('AI') || skill.includes('LLM') || skill.includes('RAG') || skill.includes('Bedrock') || skill.includes('Agentic'))) {
    return {
      gradient: "from-blue-500 to-purple-600",
      bg: "from-slate-900/90 to-blue-900/90",
      border: "border-blue-400/30",
      icon: "text-blue-400",
      glowColor: "blue-400",
      accentColor: "from-blue-400 to-cyan-400",
      category: "AI/ML"
    };
  } else if (skills.some(skill => skill.includes('AWS') || skill.includes('Cloud') || skill.includes('Terraform'))) {
    return {
      gradient: "from-purple-500 to-pink-600",
      bg: "from-slate-900/90 to-purple-900/90",
      border: "border-purple-400/30",
      icon: "text-purple-400",
      glowColor: "purple-400",
      accentColor: "from-purple-400 to-pink-400",
      category: "Cloud"
    };
  } else if (skills.some(skill => skill.includes('Python') || skill.includes('React') || skill.includes('FastAPI') || skill.includes('Streamlit'))) {
    return {
      gradient: "from-green-500 to-emerald-600",
      bg: "from-slate-900/90 to-green-900/90",
      border: "border-green-400/30",
      icon: "text-green-400",
      glowColor: "green-400",
      accentColor: "from-green-400 to-emerald-400",
      category: "Development"
    };
  } else if (skills.some(skill => skill.includes('Security') || skill.includes('Compliance'))) {
    return {
      gradient: "from-red-500 to-orange-600",
      bg: "from-slate-900/90 to-red-900/90",
      border: "border-red-400/30",
      icon: "text-red-400",
      glowColor: "red-400",
      accentColor: "from-red-400 to-orange-400",
      category: "Security"
    };
  } else {
    return {
      gradient: "from-slate-500 to-gray-600",
      bg: "from-slate-900/90 to-gray-900/90",
      border: "border-slate-400/30",
      icon: "text-slate-400",
      glowColor: "slate-400",
      accentColor: "from-slate-400 to-gray-400",
      category: "Other"
    };
  }
}
