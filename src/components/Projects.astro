---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="py-16 lg:py-20 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl mb-4">
            Featured Projects
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            AI-powered solutions and enterprise automation systems
          </p>
        </div>

        <!-- Projects Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {siteConfig.projects.map((project) => (
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow duration-200">
              {project.link ? (
                <a
                  href={project.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block p-6"
                >
                  <h3 class="text-xl font-semibold text-gray-900 mb-3">
                    {project.name}
                  </h3>

                  <p class="text-gray-600 mb-4">
                    {project.description}
                  </p>

                  {project.skills && project.skills.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {project.skills.map((skill) => (
                        <span class="px-3 py-1 bg-blue-50 text-blue-700 text-sm rounded-full">
                          {skill}
                        </span>
                      ))}
                    </div>
                  )}
                </a>
              ) : (
                <div class="p-6">
                  <h3 class="text-xl font-semibold text-gray-900 mb-3">
                    {project.name}
                  </h3>

                  <p class="text-gray-600 mb-4">
                    {project.description}
                  </p>

                  {project.skills && project.skills.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {project.skills.map((skill) => (
                        <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                          {skill}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>
  )
}